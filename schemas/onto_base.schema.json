{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/bradleypallen/pyNMMS/schemas/onto_base.schema.json",
  "title": "Ontology Material Base",
  "description": "A material base for NMMS with ontology axiom schemas. Extends the propositional base with individuals, concepts, roles, and six ontology schema types.",
  "type": "object",
  "required": ["language", "consequences"],
  "properties": {
    "language": {
      "type": "array",
      "description": "The atomic language — concept assertions C(a) and role assertions R(a,b).",
      "items": { "type": "string" }
    },
    "consequences": {
      "type": "array",
      "description": "The base consequence relation |~_B.",
      "items": {
        "type": "object",
        "required": ["antecedent", "consequent"],
        "properties": {
          "antecedent": {
            "type": "array",
            "items": { "type": "string" }
          },
          "consequent": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "annotations": {
      "type": "object",
      "description": "Optional natural-language descriptions for atoms.",
      "additionalProperties": { "type": "string" }
    },
    "individuals": {
      "type": "array",
      "description": "Known individual names extracted from assertions.",
      "items": { "type": "string" }
    },
    "concepts": {
      "type": "array",
      "description": "Known concept names extracted from assertions.",
      "items": { "type": "string" }
    },
    "roles": {
      "type": "array",
      "description": "Known role names extracted from assertions.",
      "items": { "type": "string" }
    },
    "onto_schemas": {
      "type": "array",
      "description": "Ontology axiom schemas — evaluated lazily at query time.",
      "items": {
        "type": "object",
        "required": ["type", "arg1", "arg2"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["subClassOf", "range", "domain", "subPropertyOf", "disjointWith", "disjointProperties"],
            "description": "The ontology schema type."
          },
          "arg1": {
            "type": "string",
            "description": "First argument: sub-concept (subClassOf/disjointWith), role (range/domain/subPropertyOf/disjointProperties)."
          },
          "arg2": {
            "type": "string",
            "description": "Second argument: super-concept (subClassOf), concept (range/domain/disjointWith), super-role (subPropertyOf), role (disjointProperties)."
          },
          "annotation": {
            "type": "string",
            "description": "Optional human-readable description of the schema."
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
